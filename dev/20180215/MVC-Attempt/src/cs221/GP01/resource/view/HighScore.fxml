<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!--
    * Used with the HighScoreController to display a scene to show Score, Highscores and restart button
    *
    * @author Rhys Evans (rhe24@aber.ac.uk)
    * @version 0.1  DRAFT
-->

<StackPane fx:id="parent" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: lightblue;" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label alignment="CENTER" text="High Scores">
               <font>
                  <Font size="40.0" />
               </font></Label>
            <TableView fx:id="highScoreTable" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="528.0">
              <columns>
                  <TableColumn fx:id="idCol" prefWidth="45.0" resizable="false" sortable="false" text="#" />
                  <TableColumn fx:id="nameCol" editable="false" prefWidth="118.0" resizable="false" sortable="false" text="Name" />
                <TableColumn fx:id="scoreCol" editable="false" prefWidth="150.0" resizable="false" text="SCORE" />
                <TableColumn fx:id="dateCol" editable="false" minWidth="0.0" prefWidth="214.0" resizable="false" sortable="false" text="DATE / TIME" />
              </columns>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </TableView>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="menuBtn" mnemonicParsing="false" onAction="#btnReturnClicked" text="Back to Menu" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
