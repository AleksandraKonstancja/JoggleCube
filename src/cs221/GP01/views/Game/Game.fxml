<?import javafx.geometry.Insets?>
<?import javafx.geometry.Point3D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Box?>

<!--
    * Game - Game user interface definition.
    * <p>
    * Used with the GameController to display a scene to allow user to play the game.
    *
    * @author Nathan Williams (naw21)
    * @author Rhys Evans (rhe24@aber.ac.uk)
    * @version 0.1  DRAFT
-->

<StackPane fx:id="parent" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs221.GP01.views.Game.GameController">
   <children>
      <VBox fx:id="gameScreen" alignment="CENTER" stylesheets="/cs221/GP01/views/css/JoggleCube.css">
         <HBox alignment="CENTER" prefHeight="41.0" prefWidth="200.0">
               <Label text="JoggleCube">
                  <padding>
                     <Insets right="10.0" />
                  </padding>
            </Label>
               <Label text="Timer: " />
               <Label text="10:51" />
         </HBox>
         <HBox alignment="CENTER">
             <AnchorPane prefHeight="300.0" prefWidth="300.0">
                 <Box fx:id="boggleCube" depth="100" height="100" layoutX="143.0" layoutY="142.0" rotate="108.4" width="100">
                     <rotationAxis>
                         <Point3D y="1.0" z="1.0" />
                     </rotationAxis>
                 </Box>
             </AnchorPane>
             <VBox alignment="CENTER">
                 <Label text="Words Found" />
                 <ListView prefHeight="200.0" prefWidth="200.0" />
                 <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                 </padding>
             </VBox>
         </HBox>
         <TextField alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="294.0">
            <VBox.margin>
               <Insets bottom="10.0" />
            </VBox.margin>
         </TextField>
          <Button alignment="CENTER" layoutX="235.0" layoutY="156.0" text="Submit Word" GridPane.rowIndex="2" />
         <HBox alignment="CENTER">
               <Button fx:id="pauseBtn" alignment="CENTER" mnemonicParsing="false" onAction="#btnPauseGameClicked" text="Pause Game" />
               <Button mnemonicParsing="false" onAction="#btnEndGameClicked" text="End Game" />
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </HBox>
          </VBox>

   </children>
</StackPane>
