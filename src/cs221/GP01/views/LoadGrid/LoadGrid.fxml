<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!--
    * LoadGrid - LoadGrid user interface definition.
    * <p>
    * Used with the LoadGridController to display a scene to allow user to load a Grid from file.
    *
    * @author Nathan Williams (naw21)
    * @version 0.1  DRAFT
-->
<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0"
      stylesheets="/cs221/GP01/views/css/JoggleCube.css"
      xmlns="http://javafx.com/javafx/9.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cs221.GP01.views.LoadGrid.LoadGridController"
      fx:id="parent"
>
    <Button mnemonicParsing="false" onAction="#btnPickFileClicked" text="Pick File" />
    <HBox alignment="CENTER" spacing="10.0">
        <Button mnemonicParsing="false" onAction="#btnStartGridClicked" text="Start Grid" />
        <Button mnemonicParsing="false" onAction="#btnBackClicked" text="Back" />
    </HBox>
</VBox>
