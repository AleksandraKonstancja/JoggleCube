<VBox fx:id="root" styleClass="mainContainer" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@../../css/HelpPage.css" />
    </stylesheets>
    <Label styleClass="title" text="To EXPLODE the cube, click the small cube symbol in the bottom right of the game window." textAlignment="CENTER" wrapText="true" />
    <VBox alignment="CENTER" styleClass="content">
      <children>
         <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../img/help/explodecube.gif" />
            </image>
         </ImageView>
      </children>
    </VBox>
</VBox>
