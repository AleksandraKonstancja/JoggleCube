<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="settingsOverlay" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox styleClass="topMenu">
         <children>
            <Label styleClass="title" text="Settings" />
            <Button fx:id="settingsCloseBtn" mnemonicParsing="false" onAction="#closeBtnClicked" styleClass="closeButton" />
         </children>
      </HBox>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="settingsContainer">
         <children>
            <CheckBox mnemonicParsing="false" styleClass="colorBlindToggle" text="Enable Colour Blind Mode" />
            <CheckBox mnemonicParsing="false" selected="true" text="Enable Music" />
            <CheckBox mnemonicParsing="false" selected="true" text="Enable Sound Effects" />
            <VBox styleClass="volumeContainer">
               <children>
                  <Label text="Master Volume" />
                  <Slider value="70.0" />
               </children>
            </VBox>
            <HBox styleClass="highScoreButtonContainer">
               <children>
                  <Button mnemonicParsing="false" onAction="#clearHighScoreClicked" text="Clear High Scores" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>

    <stylesheets>
        <URL value="@../css/Settings.css" />
        <URL value="@../css/BaseStyle.css" />
    </stylesheets>
</VBox>
