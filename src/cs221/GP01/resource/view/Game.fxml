-->
<!-- @formatter:off -->

<StackPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <VBox fx:id="mainNode" styleClass="mainContainer">
        <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="topMenu">
            <Label fx:id="scoreLabel" styleClass="scoreLabel" text="156" />
            <Label fx:id="timerLabel" styleClass="timerLabel" text="3:00" />
         <HBox styleClass="buttonContainer">
            <children>
               <Button fx:id="quitButton" mnemonicParsing="false" onAction="#btnEndGameClicked" />
                    <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#btnSettingsClicked" />
            </children>
         </HBox>
        </HBox>
        <HBox styleClass="gameElementsContainer">
            <TabPane fx:id="cubeContainer" styleClass="cubeContainer" tabClosingPolicy="UNAVAILABLE">
                <Tab text="3D View">
                    <BorderPane fx:id="back" prefHeight="300" prefWidth="400" styleClass="gridTab">
                        <SubScene fx:id="subScene" depthBuffer="true" height="300" width="400">
                            <root>
                                <Group fx:id="groupy">
                                    <children>
                                    </children>
                                </Group>
                            </root>
                        </SubScene>
                    </BorderPane>
                </Tab>
                <Tab text="2.5D View">
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="250" prefWidth="250" styleClass="gridTab">
                        <!-- These lines are horrendous todo fix these -->
                        <Line>
                            <startX>10</startX>
                            <startY>130</startY>
                            <endX>250</endX>
                            <endY>230</endY>
                        </Line>
                        <Line>
                            <startX>50</startX>
                            <startY>100</startY>
                            <endX>330</endX>
                            <endY>200</endY>
                        </Line>
                        <Line>
                            <startX>100</startX>
                            <startY>10</startY>
                            <endX>330</endX>
                            <endY>100</endY>
                        </Line>
                        <GridPane fx:id="top25d" layoutX="10" layoutY="10" prefHeight="90" prefWidth="90" rotate="45">
                            <rotationAxis><Point3D x="0.3" y="-1.0" z="0" /></rotationAxis>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="40" prefWidth="40" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="40" prefWidth="40" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="40" prefWidth="40" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="40" prefHeight="40" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="40" prefHeight="40" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="40" prefHeight="40" vgrow="SOMETIMES" />
                            </rowConstraints>
                        </GridPane>
                        <GridPane fx:id="middle25d" layoutX="120" layoutY="50" prefHeight="90" prefWidth="90" rotate="45">
                            <rotationAxis><Point3D x="0.3" y="-1.0" z="0" /></rotationAxis>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="40" prefWidth="40" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="40" prefWidth="40" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="40" prefWidth="40" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="40" prefHeight="40" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="40" prefHeight="40" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="40" prefHeight="40" vgrow="SOMETIMES" />
                            </rowConstraints>
                        </GridPane>
                        <GridPane fx:id="bottom25d" layoutX="230" layoutY="100" prefHeight="90" prefWidth="90" rotate="45">
                            <rotationAxis><Point3D x="0.3" y="-1.0" z="0" /></rotationAxis>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="40" prefWidth="40" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="40" prefWidth="40" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="40" prefWidth="40" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="40" prefHeight="40" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="40" prefHeight="40" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="40" prefHeight="40" vgrow="SOMETIMES" />
                            </rowConstraints>
                        </GridPane>
                    </AnchorPane>
                </Tab>
                <Tab text="2D View">
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="208.0" prefWidth="259.0" styleClass="gridTab">
                        <GridPane fx:id="top2d" layoutX="10" layoutY="10" prefHeight="90" prefWidth="90">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="30" prefWidth="30" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="30" prefWidth="30" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="30" prefWidth="30" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="30" prefHeight="30" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="30" prefHeight="30" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="30" prefHeight="30" vgrow="SOMETIMES" />
                            </rowConstraints>
                        </GridPane>
                        <GridPane fx:id="middle2d" layoutX="120" layoutY="50" prefHeight="90" prefWidth="90">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="30" prefWidth="30" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="30" prefWidth="30" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="30" prefWidth="30" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="30" prefHeight="30" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="30" prefHeight="30" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="30" prefHeight="30" vgrow="SOMETIMES" />
                            </rowConstraints>
                        </GridPane>
                        <GridPane fx:id="bottom2d" layoutX="230" layoutY="100" prefHeight="90" prefWidth="90">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="30" prefWidth="30" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="30" prefWidth="30" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="30" prefWidth="30" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="30" prefHeight="30" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="30" prefHeight="30" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="30" prefHeight="30" vgrow="SOMETIMES" />
                            </rowConstraints>
                        </GridPane>
                    </AnchorPane>
                </Tab>
            </TabPane>
            <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="foundWordsContainer">
                <Label text="Words Found" />
                <ListView fx:id="foundWordsList" />
            </VBox>
        </HBox>
        <VBox styleClass="wordInputContainer">
            <children>
                <TextField fx:id="textField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" />
                <HBox styleClass="wordInputButtonContainer">
                <Button fx:id="btnSubmit" mnemonicParsing="false" onAction="#btnSubmitClicked" text="Submit Word" />
                <Button fx:id="btnClear" mnemonicParsing="false" onAction="#btnClearClicked" text="Clear Word" />
                </HBox>
            </children>
        </VBox>
    </VBox>
    <stylesheets>
        <URL value="@../css/Game.css" />
        <URL value="@../css/BaseStyle.css" />
    </stylesheets>
</StackPane>
