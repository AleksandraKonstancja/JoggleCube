<?import javafx.geometry.Insets?>
<?import javafx.geometry.Point3D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Box?>
<?import javafx.scene.text.Font?>

<!--
    * GameGUI - GameGUI user interface definition.
    * <p>
    * Used with the GameGUIController to display a scene to allow user to play the game.
    *
    * @author Nathan Williams (naw21)
    * @author Rhys Evans (rhe24@aber.ac.uk)
    * @version 0.1  DRAFT
-->

<StackPane fx:id="parent" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs221.GP05.GUI.GameGUI.GameGUIController">
   <children>
      <VBox fx:id="gameScreen" alignment="CENTER" stylesheets="/cs221/GP05/GUI/CSS/JoggleCube.css">
         <HBox alignment="CENTER" prefHeight="41.0" prefWidth="200.0">
               <Label text="JoggleCube">
                  <padding>
                     <Insets right="10.0" />
                  </padding>
            </Label>
               <Label text="Timer: " />
               <Label text="10:51" />
         </HBox>
         <HBox alignment="CENTER">
             <AnchorPane prefHeight="300.0" prefWidth="300.0">
                  <Box fx:id="boggleCube" depth="100" height="100" layoutX="143.0" layoutY="142.0" rotate="108.4" width="100">
                     <rotationAxis>
                        <Point3D y="1.0" z="1.0" />
                     </rotationAxis>
                  </Box>
               <VBox layoutX="29.0" layoutY="152.0" prefHeight="200.0" prefWidth="100.0" />
             </AnchorPane>
             <VBox alignment="CENTER">
                 <Label text="Words Found" />
                 <ListView prefHeight="200.0" prefWidth="200.0" />
                 <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                 </padding>
             </VBox>
         </HBox>
         <TextField alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="294.0">
            <VBox.margin>
               <Insets bottom="10.0" />
            </VBox.margin>
         </TextField>
          <Button alignment="CENTER" layoutX="235.0" layoutY="156.0" text="Submit Word" GridPane.rowIndex="2" />
         <HBox alignment="CENTER">
               <Button fx:id="pauseBtn" alignment="CENTER" mnemonicParsing="false" onAction="#btnPauseGameClicked" text="Pause Game" />
               <Button mnemonicParsing="false" onAction="#btnEndGameClicked" text="End Game" />
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </HBox>
          </VBox>
      <VBox fx:id="pauseOverlay" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="362.0" prefWidth="248.0" style="-fx-background-color: rgba(64, 64, 64, 0.75);" visible="false">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" text="GAME PAUSED" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="NEVER">
               <children>
                  <Button fx:id="resumeBtn" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#btnResumeClicked" prefHeight="26.0" prefWidth="168.0" text="Resume" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></Button>
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="110.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="exitBtn" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#btnExitClicked" prefHeight="26.0" prefWidth="168.0" text="Exit" textAlignment="CENTER" />
               </children>
               <VBox.margin>
                  <Insets top="-40.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="170.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="helpBtn" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" prefHeight="26.0" prefWidth="168.0" text="Help" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="-40.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
